%div.panel.panel-default.question{data: {question: {index: index+1, id: question.id}}}
  %div.panel-heading
    %h3.panel-title #{index +1}. #{question.title}

  %div.list-group
    - question.answers.each_with_index do |answer, idx|
      = link_to "#{letter(idx)}. #{answer.content}", "#", class: 'list-group-item answer-button', data: {answer_id: answer.id}