%div.page-header
  %h1 Users

%table.table
  %thead
    %tr
      %th.col-sm-1 ID
      %th name
      %th email
      %th.col-sm-3 actions
  %tbody
    - @users.each do |user|
      %tr
        %td= user.id
        %td= link_to user.name, admin_user_path(user)
        %td= user.email
        %td
          = link_to 'Edit', edit_admin_user_path(user), class: 'btn btn-sm btn-default'
    - if @users.size == 0
      %tr
        %td{colspan: 4}
          %p No users yet