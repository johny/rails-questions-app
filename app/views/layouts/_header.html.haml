%header
  %nav.navbar.navbar-default.navbar-inverse.navbar-static-top
    .container
      .navbar-header
        %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        = link_to 'QuizApp', root_path, class: 'navbar-brand'
      .collapse.navbar-collapse
        - if user_signed_in?
          %p.navbar-text Witaj #{current_user.name}!
        %ul.nav.navbar-nav.navbar-right
          - if user_signed_in?
            %li= link_to 'Edycja konta', edit_user_registration_path
            %li= link_to 'Wyloguj się', destroy_user_session_path, :method=>'delete'
          - else
            %li= link_to 'Zarejestruj się', new_user_registration_path
            %li= link_to 'Zaloguj się', new_user_session_path