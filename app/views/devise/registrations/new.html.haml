%div.page-header
  %h1 Zarejestruj się

= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f|

  = devise_error_messages!

  %div.form-group
    = f.label :name, "Twoje imię lub pseudonim:"
    = f.text_field :name, autofocus: true, class: 'form-control'

  %div.form-group
    = f.label :email, "Adres email:"
    = f.email_field :email, autocomplete: :off, class: 'form-control'

  %div.form-group
    = f.label :password, "Hasło:"
    = f.password_field :password, class: 'form-control', placeholder: "Wybierz bezpieczne i łatwe do zapamiętania"
    %span.help-block Minimum 8 znaków

  %div.form-group
    = f.label :password_confirmation, "Powtórz hasło:"
    = f.password_field :password_confirmation, class: 'form-control'

  %div.form-actions
    = f.submit 'Zarejestruj się', class: 'btn btn-primary btn-lg'

